<UserControl
    x:Class="SuperPassword.Views.AddInfoGroupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:SuperPassword.Common.CustomControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuperPassword.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock FontSize="24" Text="新建项" />
        <StackPanel Grid.Row="1">
            <TextBox />
            <TextBox />
            <TextBox />
            <WrapPanel />
        </StackPanel>
        <WrapPanel Grid.Row="2" FlowDirection="RightToLeft">
            <custom:BaseButton
                Margin="10,5"
                Content="取消"
                CornerRadius="5" />
            <custom:BaseButton
                Margin="10,5"
                Content="确认"
                CornerRadius="5" />
        </WrapPanel>
    </Grid>
</UserControl>
