<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:SuperPassword.Common.CustomControl">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="BaseStyle.xaml" />
        <ResourceDictionary Source="EditableBox.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource EditableBox}" TargetType="{x:Type custom:Tag}">
        <Setter Property="BorderBrush" Value="{Binding Path=Color, RelativeSource={RelativeSource Self}, Mode=OneWay}"/>
        <Setter Property="Foreground" Value="{Binding Path=Color, RelativeSource={RelativeSource Self}, Mode=OneWay}"/>
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="20,10" />
    </Style>
</ResourceDictionary>