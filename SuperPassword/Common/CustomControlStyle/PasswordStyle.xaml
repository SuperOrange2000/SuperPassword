<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:SuperPassword.Common.CustomControl">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="BaseStyle.xaml" />
        <ResourceDictionary Source="EditableBox.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource EditableBox}" TargetType="{x:Type custom:Password}" >
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Height" Value="40" />
        <Setter Property="HoverBorderBrush" Value="{StaticResource Orange.Stong}" />
        <Setter Property="HoverForeground" Value="{StaticResource Orange.Stong}" />
        <Setter Property="HoverBackground" Value="{StaticResource Orange.Background}" />
    </Style>
</ResourceDictionary>