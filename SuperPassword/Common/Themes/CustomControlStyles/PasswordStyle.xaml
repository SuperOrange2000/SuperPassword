<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:SuperPassword.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../BaseStyle.xaml" />
        <ResourceDictionary Source="DragableBox.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource DragableBox}" TargetType="{x:Type custom:Password}">
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Height" Value="40" />
        <Setter Property="HoverBorderBrush" Value="{StaticResource Orange.Stong}" />
        <Setter Property="HoverForeground" Value="{StaticResource Orange.Stong}" />
        <Setter Property="HoverBackground" Value="{StaticResource Orange.Background}" />
    </Style>
</ResourceDictionary>